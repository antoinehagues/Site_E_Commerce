<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
"-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
"http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
	<constant name="struts.custom.i18n.resources" value="resources.messages" />
	<constant name="struts.enable.DynamicMethodInvocation" value="false" />
	<constant name="struts.devMode" value="false" />
	
	<package name="com.hitema.home"  namespace="/home" extends="struts-default"> 
		<result-types>
			<result-type name="tiles" class="org.apache.struts2.views.tiles.TilesResult"></result-type>
		</result-types>   
	    <action name="home" class="com.hitema.tiles.TilesPage">
	     	 <result name="page" type="tiles">page</result>
	    </action>
	</package>  
	<package name="com.hitema.login"  namespace="/login" extends="struts-default">    
	    <action name="login" class="com.hitema.login.loginController">
	     	 <result>/views/login.jsp</result>
	    </action>
	</package>
</struts>